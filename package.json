{
  "name": "sanity-plugin-gemini-ai-images-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "AI-powered image generation for Sanity Studio using Google Gemini",
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "dev": "npm run dev --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "type-check": "npm run type-check --workspaces --if-present",
    "clean": "rm -rf packages/*/dist packages/*/node_modules examples/*/node_modules node_modules"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^19.0.0",
    "typescript": "^5.9.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}
